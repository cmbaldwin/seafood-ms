<div class="container mt-5">
    <div class="row justify-content-sm-center">

    <div class="col-sm-2"></div>
    <div class="col-sm-8">
    	<h2 class="mb-4 text-center">パスワードを忘れた?</h2>

		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>

     　<div class="form-group row justify-content-sm-center">
       <div class="col-sm-4">
          <%= f.label :email, :html => 'for="colFormLabelLg"', :class => "col-sm-12 col-form-label col-form-label-lg" %>
        </div>
        <div class="col-sm-8">
          <div class="input-group mb-2">
            <div class="input-group-prepend">
                    <div class="input-group-text">
                      <i class="fas fa-user"></i>
                    </div>
                </div>
            <%= f.email_field :email, :class => 'form-control form-control-lg', :id=> 'colFormLabelLg', :html => 'placeholder="col-form-label-lg"', autofocus: true, autocomplete: "email" %>
          </div>
        </div>
      　</div>

          <div class="form-group row text-center">
        <div class="col-sm-12">
          <%= f.submit "パスワードの再設定を始まる", :class => 'btn btn-primary' %>
        </div>
        <% end %>
        <div class="col-sm-12 mt-2">
          <%= render "devise/shared/links" %>
        </div>
      </div>
	</div>
  <div class="col-sm-2"></div>
	</div>
</div>

