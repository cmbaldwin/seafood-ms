<%= simple_form_for ([@article, @article.comments.build]) do |form| %>
	<%= hidden_field :user_id, :value => current_user.id %>
		<p>
			<%= form.text_field :title, class: "form-control form-control-sm", label: false %>
		</p>
		<p>
			<%= form.input :body, label: false %>
		</p>
		<p>
			<%= form.submit 'コメント', :class => 'btn' %>
		</p>
<% end %>