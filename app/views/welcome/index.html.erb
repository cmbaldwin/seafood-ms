<div id="index" class="container-fluid">
	<div class="row d-flex card-deck">

		<% if current_user.vip? || current_user.admin? || current_user.employee? %>
			<div class="d-flex col-sm-12 col-md-6 mb-3 align-items-stretch">
				<div class="card h-100">
					<div class="card-header">
						<h5 class="mb-0 float-left">楽天市場</h5>
						<i class="fas fa-calendar float-right"></i>
					</div>
					<div class="card-body scroll">
						<div id="rakuten_partial">
							<%= render 'rakuten_orders', locals: {rakuten: @rakuten, order: @order_id}, cached: true %>
						</div>
					</div>
				</div>
			</div>
		<% end %>

		<% if current_user.vip? || current_user.admin? || current_user.employee? %>
			<div class="d-flex col-sm-12 col-md-6 mb-3 align-items-stretch">
				<div class="card h-100">
					<div class="card-header">
						<h5 class="mb-0 float-left">InfoMart ・ Online Shop</h5>
						<i class="fas fa-calendar float-right"></i>
					</div>
					<div class="card-body scroll">
						<div id="tsuhan_partial">
							<%= render 'online_orders', locals: {tsuhan: @online_orders}, cached: true %>
						</div>
					</div>
				</div>
			</div>
		<% end %>

		<% if current_user.admin? %>
			<div class="d-flex col-12 mb-3 align-items-stretch">
				<div class="card h-100">
					<div class="card-header">
						<h5 class="mb-0 float-left">現在の売上状態</h5>
						<i class="fas fa-coins float-right"></i>
					</div>
					<div class="card-body scroll">
						<%= render 'charts', cached: true %>
					</div>
				</div>
			</div>
		<% end %>

		<div class="d-flex col-sm-12 col-md-3 mb-3 align-items-stretch">
			<div class="card w-100 h-100">
				<div class="card-header">
					<h5 class="mb-0 float-left">
						セルカード
					</h5>
					<i class="fas fa-table float-right"></i>
				</div>
				<div class="card-body text-center">
					<%= render 'daily_expiration_cards', cached: true %>
				</div>
			</div>
		</div>

		<div class="d-flex col-sm-12 col-md-6 col-lg-3 mb-3 align-items-stretch">
			<div id="receipt_card" class="card h-100">
				<div class="card-header">
					<h5 class="mb-0 float-left">
						領収証
					</h5>
					<i class="fas fa-table float-right"></i>
				</div>
				<div class="card-body text-center">
					<div id="receipt_partial">
						<%= render 'receipt', remote: true, locals: {rakuten: @rakuten, order: @order_id}, cached: true %>
					</div>
				</div>
			</div>
		</div>	
		
		<% if current_user.supplier? %>
			<div class="d-flex col-sm-12 col-md-6 mb-3 align-items-stretch">
				<div class="card h-100">
					<div class="card-header">
						<h5 class="mb-0 float-left">生産者パネル</h5>
						<i class="fas fa-calendar float-right"></i>
					</div>
					<div class="card-body scroll">
						このパネルはまだ工事中です。
					</div>
				</div>
			</div>
		<% end %>
		
		<% if current_user.admin? %>
			<div class="d-flex col-sm-12 col-md-6 col-lg-3 mb-3 align-items-stretch">
			<div class="card w-100 h-100">
				<div class="card-header">
					<h5 class="mb-0 float-left">
						ユーザー管理パネル
					</h5>
					<i class="fas fa-users float-right"></i>
				</div>
				<div class="card-body scroll" id="usercontrol">
					<%= render 'usercontrol', cached: true %>
				</div>
			</div>
		</div>
		<% end %>

		<div class="d-flex col-sm-12 col-md-3 mb-3 align-items-stretch">
			<div class="card h-100">
				<div class="card-header">
					<h5 class="mb-0 float-left">
						通販印刷物
					</h5>
					<i class="fas fa-table float-right"></i>
				</div>
				<div class="card-body text-center">
					<%= render 'printables', cached: true %>
				</div>
			</div>
		</div>

		<div class="d-flex col-12 mb-3 align-items-stretch">
			<div class="card h-100">
				<div class="card-header">
					<h5 class="mb-0 float-left">冷凍データ・在庫管理</h5>
					<i class="fas fa-coins float-right"></i>
				</div>
				<div class="card-body scroll">
					<%= render 'frozen_data', cached: true %>
				</div>
			</div>
		</div>

	</div>
</div>