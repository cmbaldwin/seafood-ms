<div id="index" class="container-fluid">
	<div class="row d-flex card-deck">

		<% if current_user.vip? || current_user.admin? || current_user.employee? %>
			<div class="d-flex col-md-12 col-lg-6 mb-3 align-items-stretch">
				<div class="card h-100">
					<div class="card-header">
						<h5 class="mb-0 float-left">楽天市場</h5>
						<h4><%= icon("calendar-check", class: "float-right") %></h4>
					</div>
					<div class="card-body m-0 p-0">
						<div id="rakuten_partial">
							<%= render 'rakuten_orders', locals: {rakuten: @rakuten, order: @order_id, rakuten_shinki: @rakuten_shinki} %>
						</div>
					</div>
				</div>
			</div>
		<% end %>

		<% if current_user.vip? || current_user.admin? || current_user.employee? %>
			<div class="d-flex col-md-12 col-lg-6 mb-3 align-items-stretch">
				<div class="card h-100">
					<div class="card-header">
						<h5 class="mb-0 float-left">InfoMart / Funabiki.info</h5>
						<h4><%= icon("calendar-check", class: "float-right") %></h4>
					</div>
					<div class="card-body m-0 p-0">
						<div id="tsuhan_partial">
							<%= render_async 'online_orders', locals: {tsuhan: @online_orders} do %>
								<div class="d-flex justify-content-center my-3 py-3">
									<div class="spinner-border spinner-border-sm" role="status">
										<span class="sr-only">読み込み中...</span>
									</div>
								</div>
							<% end %>
						</div>
					</div>
				</div>
			</div>
		<% end %>

		<% if current_user.vip? || current_user.admin? || current_user.employee? %>
			<div class="d-flex col-md-12 col-lg-6 mb-3 align-items-stretch">
				<div class="card h-100">
					<div class="card-header">
						<h5 class="mb-0 float-left">Yahoo!ショッピング</h5>
						<h4><%= icon("calendar-check", class: "float-right") %></h4>
					</div>
					<div class="card-body m-0 p-0">
						<div id="yahoo_partial">
							<%= render_async 'yahoo_orders_partial', locals: {yahoo_orders: @yahoo_orders, yahoo_date: @yahoo_date} do %>
								<div class="d-flex justify-content-center my-3 py-3">
									<div class="spinner-border spinner-border-sm" role="status">
										<span class="sr-only">読み込み中...</span>
									</div>
								</div>
							<% end %>
						</div>
					</div>
				</div>
			</div>
		<% end %>

		<% if current_user.admin? %>
			<div class="d-flex col-md-12 col-lg-6 mb-3 align-items-stretch d-none d-lg-block">
				<div class="card h-100">
					<div class="card-header">
						<h5 class="mb-0 float-left">現在の売上状態</h5>
						<h4><%= icon("building", class: "float-right") %></h4>
					</div>
					<div class="card m-0 p-0 border-white">
						<%= render 'charts' %>
					</div>
				</div>
			</div>
		<% end %>

		<div class="d-flex col-md-12 col-lg-6 mb-3 align-items-stretch">
			<div class="card w-100 h-100">
				<div class="card-header">
					<h5 class="mb-0 float-left">
						セルカード
					</h5>
					<h4><%= icon("card-heading", class: "float-right") %></h4>
				</div>
				<div class="card-body text-center">
					<%= render_async 'daily_expiration_cards' do %>
						<div class="d-flex justify-content-center my-3 py-3">
							<div class="spinner-border spinner-border-sm" role="status">
								<span class="sr-only">読み込み中...</span>
							</div>
						</div>
					<% end %>
				</div>
			</div>
		</div>

		<div class="d-flex col-md-12 col-lg-6 mb-3 align-items-stretch">
			<div id="receipt_card" class="card h-100">
				<div class="card-header">
					<h5 class="mb-0 float-left">
						領収証
					</h5>
					<h4><%= icon("receipt", class: "float-right") %></h4>
				</div>
				<div class="card-body text-center">
					<div id="receipt_partial">
						<%= render 'receipt', remote: true, locals: {rakuten: @rakuten, order: @order_id}, cached: true %>
					</div>
				</div>
			</div>
		</div>	
		
		<% if current_user.supplier? %>
			<div class="d-flex col-md-12 col-lg-6 mb-3 align-items-stretch">
				<div class="card h-100">
					<div class="card-header">
						<h5 class="mb-0 float-left">生産者パネル</h5>
						<h4><%= icon("calendar-date-fill", class: "float-right") %></h4>
					</div>
					<div class="card-body scroll">
						このパネルはまだ工事中です。
					</div>
				</div>
			</div>
		<% end %>
		
		<% if current_user.admin? %>
			<div class="d-flex col-md-12 col-lg-6 mb-3 align-items-stretch">
			<div class="card w-100 h-100">
				<div class="card-header">
					<h5 class="mb-0 float-left">
						ユーザー管理パネル
					</h5>
					<h4><%= icon("people-fill", class: "float-right") %></h4>
				</div>
				<div class="card-body scroll" id="usercontrol">
					<%= render 'usercontrol', cached: true %>
				</div>
			</div>
		</div>
		<% end %>

		<div class="d-flex col-md-12 col-lg-6 mb-3 align-items-stretch">
			<div class="card h-100">
				<div class="card-header">
					<h5 class="mb-0 float-left">
						通販印刷物
					</h5>
					<h4><%= icon("printer", class: "float-right") %></h4>
				</div>
				<div class="card-body text-center">
					<%= render 'printables', cached: true %>
				</div>
			</div>
		</div>

		<!--
		<div class="d-flex col-12 mb-3 align-items-stretch">
			<div class="card h-100">
				<div class="card-header">
					<h5 class="mb-0 float-left">冷凍データ・在庫管理</h5>
					<h4><%# icon("thermometer", class: "float-right") %></h4>
				</div>
				<div class="card-body scroll">
					<%# render 'frozen_data' %>
				</div>
			</div>
		</div>
		-->

	</div>
</div>