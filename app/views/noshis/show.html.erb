<% title "Funabiki Online - 熨斗" + @noshi.namae %>

<div class="container">
	<div class="row align-middle">
		<div class="col">
<% if current_user.admin? or current_user.vip? %>
			<div class="btn-group float-right" role="group" aria-label="Basic">
				<%= link_to '前へ', noshis_path, class: 'btn btn-secondary' %>
			</div>
<% end %>
		<hr/>

			<h1>熨斗番号: <%= @noshi.id %></h1>
			
		</div>
	</div>

	<hr/>

	<div class="row small">
		<div class="col">
			<p>
				<strong>熨斗の画像種類番号</strong>
				<%= @noshi.ntype %>
			</p>

			<p>
				<strong>表書き:</strong>
				<%= @noshi.omotegaki %>
			</p>

			<p>
				<strong>名前:</strong>
				<%= @noshi.namae %>
			</p>
		</div>
		<div class="col">
			<strong>熨斗画像:</strong>
			<p>
				<%= link_to image_tag(@noshi.image_url(:thumb).to_s, :alt => "#{@noshi.namae.to_s + " " + @noshi.omotegaki.to_s}", :class => "img-thumbnail"), @noshi.image_url %>
			</p>
		</div>
	</div>

	<hr/>
	
</div>